{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@test/*": ["test/*"],
            "@typechain-types/*": ["typechain-types/*"],
            "@typechain-types": ["typechain-types/index"]
        }
    },
    "exclude": ["examples", "dist", "node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
